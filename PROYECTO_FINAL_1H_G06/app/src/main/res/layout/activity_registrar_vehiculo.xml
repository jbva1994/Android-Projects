<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarVehiculo">

    <ScrollView
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tituloRegVehiculoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/tituloVehiculo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/placaVehiculoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/placaVehiculo"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/marcaVehiculoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/marcaVehiculo"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/fechaFabVehiculoDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_horizontal"
                android:text="@string/fechaFabVehiculo"
                android:textSize="18sp" />
            <!--
            <DatePicker
                android:id="@+id/fechaVehiculoDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true" />
            -->
            <EditText
                android:id="@+id/costoVehiculoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/costoVehiculo"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/matriculadoVehiculoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/matriculadoVehiculo"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/matriculadoSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="7dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/colorVehiculoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/colorVehiculo"
                android:inputType="textPersonName"
                android:textSize="18sp" />
            <!--
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/colorBlancoCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colorBlanco"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <CheckBox
                    android:id="@+id/colorNegroCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colorNegro"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <CheckBox
                    android:id="@+id/colorOtroCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colorOtro"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


            </LinearLayout>
            -->

            <Button
                android:id="@+id/confirmarVehiculoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:onClick="confirmarRegistro"
                android:text="@string/confirmarVehiculo" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>